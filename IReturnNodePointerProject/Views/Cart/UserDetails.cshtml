@{
    Layout = "_Layout";
}
@model IReturnNodePointerProject.Controllers.CartDeets;
<style>
    .cart-page {
        padding-top: 10px;
    }

    #Title {
        font-size: 50px;
    }

    .cart-list {
        margin-right: 9px;
        float: left;
        width: 60%;
    }

    .cart-item {
        display: inline-block;
        width: 100%;
        border-radius: 10px;
        margin: 5px 5px 5px 5px;
    }

    .head {
        width: 100%;
        display: inline-block;
    }

        .head #product-name {
            font-size: 25px;
            float: left;
        }

        .head #product-price {
            padding-top: 7px;
            float: right;
        }

    .quantity-control {
        width: 75%;
        display: inline-block
    }

    .cart-item #imgDisplay {
        width: 100px;
        float: Left;
        height: 100px;
        border: 1px solid black;
        margin-right: 10px;
    }

    .text-block {
        float: right;
        width: 85%;
    }

    .information {
        display: initial;
    }

    .controlls {
        float: right;
        width: 35%;
    }

        .controlls #btnHolder {
            width: 100%;
            float: right;
        }

        .controlls #CardAdd {
            width: 100%;
            background: #f50000;
            color: white;
            border-radius: 10px;
            padding: 10px 0 10px 0;
            margin-bottom: 10px;
            margin-top: 10px;
        }

    .info-block {
        width: 100%;
        display: inline-block;
    }

        .info-block #Label {
            float: left;
        }

        .info-block #Data {
            float: right;
        }
</style>
<div class="cart-page">
    <div class="cart-list">
        <p id="Title">Your Cart</p>
        @if (Model.Cart.Count != 0)
        {
            @foreach (var item in Model.Cart)
            {
                <hr>
                <div class="cart-item">
                    <div id="information">
                        <div id="imgDisplay"></div>
                        <div class="text-block">
                            <div class="head">
                                <div id="product-name">
                                    <b>@item.Name</b>
                                </div>
                                <div id="product-price">
                                    $@item.price
                                </div>
                            </div>
                            <div class="head">
                                Vender: @item.Author
                            </div>
                            <div class="quantity-control">
                                <div id="item-quantity">
                                    Quantity: @item.Quantity
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-cart">
                Your Cart Is Empty
            </div>
        }
        <!--all the non cart stuff-->
    </div>
    <div class="controlls">
        <p id="Title">
            Spherebuster
        </p>
        <hr />
        <p id="help"><b>Need Help?</b> Drop us an email at Help@spherbuster.com.au</p>
        <hr />
        <div class="info-block">
            <p id="Label">Shipping Cost:</p>
            <p id="Data">Shipping Is Caculated At Checkout</p>
        </div>
        <div class="info-block">
            <div id="Label">Cart Total:</div>
            <div id="Data">$@Model.cartTotal</div>
        </div>
        <span id="btnHolder">
            <button id="CardAdd">Purchase</button>
        </span>
    </div>
</div>
