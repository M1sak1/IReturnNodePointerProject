@{
    Layout = "_Layout";
}

@model IReturnNodePointerProject.Models.AccountViewModel;
<style>
    .cart-page {
        padding-top: 10px;
    }

    #Title {
        font-size: 50px;
    }

    .cart-list {
        margin-right: 9px;
        float: left;
        width: 60%;
    }

    .cart-item {
        display: inline-block;
        width: 100%;
        border-radius: 10px;
        margin: 5px 5px 5px 5px;
    }

    .head {
        width: 100%;
        display: inline-block;
    }

        .head #product-name {
            font-size: 25px;
            float: left;
        }

        .head #product-price {
            padding-top: 7px;
            float: right;
        }

    .quantity-control {
        width: 75%;
        display: inline-block
    }

    .cart-item #imgDisplay {
        width: 100px;
        float: right;
        height: 100px;
        border: 1px solid black;
        margin-right: 10px;
    }

    .text-block {
        float: right;
        width: 85%;
    }

    .information {
        display: initial;
    }

    .controlls {
        float: right;
        width: 35%;
    }

        .controlls #btnHolder {
            width: 100%;
            float: right;
        }

        .controlls #CardAdd {
            width: 100%;
            background: #f50000;
            color: white;
            border-radius: 10px;
            padding: 10px 0 10px 0;
            margin-bottom: 10px;
            margin-top: 10px;
        }

    .info-block {
        width: 100%;
        display: inline-block;
    }

        .info-block #Label {
            float: right;
        }

        .info-block #Data {
            float: left;
        }
</style>
    <div>
        <div class="row">
            <div class="col-md-4">
                <form method="post" asp-action="CartController">
                    <h1>UpdateAccountInformation:</h1>
                    <div class="row mb-2">
                        <label class="col-form-label col-md-5">PhoneNumber:</label>
                        <div class="col-md-10">
                            <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" name="PhoneNumber" type="text" value=@ViewBag.TO.PhoneNumber required />
                            <span class="field-validation-valid" data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span>
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <h2>Postal Information:</h2>
                    <div class="row mb-2">
                        <label class="col-form-label col-md-5">Street Address:</label>
                        <div class="col-md-10">
                        <input type="text" asp-for="StreetAddress" class="form-control" id="StreetAddress" name="StreetAddress" value="@ViewBag.TO.StreetAddress" required />
                            <span class="field-validation-valid" data-valmsg-for="StreetAddress" data-valmsg-replace="true"></span>
                            @Html.ValidationMessageFor(m => m.StreetAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-form-label col-md-5">PostCode:</label>
                        <div class="col-md-10">
                        <pre><input type="number" asp-for="PostCode" class="form-control" id="PostCode" name="PostCode" value=@ViewBag.TO.PostCode required /></pre>
                            <span class="field-validation-valid" data-valmsg-for="PostCode" data-valmsg-replace="true"></span>
                            @Html.ValidationMessageFor(m => m.PostCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-form-label col-md-5">Suburb:</label>
                        <div class="col-md-10">
                        <input type="text" asp-for="Suburb" class="form-control" id="Suburb" name="Suburb" value=@ViewBag.TO.Suburb required />
                            <span class="field-validation-valid" data-valmsg-for="Suburb" data-valmsg-replace="true"></span>
                            @Html.ValidationMessageFor(m => m.Suburb, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-form-label col-md-5">State:</label>
                        <div class="col-md-10">
                        <input type="text" asp-for="State" class="form-control" id="State" name="State" value=@ViewBag.TO.State required />
                            <span class="field-validation-valid" data-valmsg-for="State" data-valmsg-replace="true"></span>
                            @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <h2>Credit Card Information:</h2>
                    <div class="row mb-2">
                        <label class="col-form-label col-md-5">CardNumbers:</label>
                        <div class="col-md-10">
                        <input type="text" asp-for="CardNumber" class="form-control" id="CardNumber" name="CardNumber" value=@ViewBag.TO.CardNumber required />
                            <span class="field-validation-valid" data-valmsg-for="CardNumber" data-valmsg-replace="true"></span>
                            @Html.ValidationMessageFor(m => m.CardNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-form-label col-md-5">CardOwner:</label>
                        <div class="col-md-10">
                        <input type="text" asp-for="CardOwner" class="form-control" id="CardOwner" name="CardOwner" value=@ViewBag.TO.CardOwner required />
                            <span class="field-validation-valid" data-valmsg-for="CardOwner" data-valmsg-replace="true"></span>
                            @Html.ValidationMessageFor(m => m.CardOwner, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-form-label col-md-5">Expiry:</label>
                        <div class="col-md-10">
                        <input type="text" asp-for="Expiry" class="form-control" id="Expiry" name="Expiry" value=@ViewBag.TO.Expiry required />
                            <span class="field-validation-valid" data-valmsg-for="Expiry" data-valmsg-replace="true"></span>
                            @Html.ValidationMessageFor(m => m.Expiry, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-form-label col-md-5">CVV:</label>
                        <div class="col-md-10">
                        <input type="number" asp-for="CVV" class="form-control" id="CVV" name="CVV" value=@ViewBag.TO.CVV required />
                            <span class="field-validation-valid" data-valmsg-for="CVV" data-valmsg-replace="true"></span>
                            @Html.ValidationMessageFor(m => m.CVV, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col offset-md-2">
                            <button type="submit" class="btn btn-primary" value="LoginViewModel">UpdateDetails</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
