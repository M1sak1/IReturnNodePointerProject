<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Random Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-0.5">
                        <li class="navbar-nav flex-grow-1"> 
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index"> <i class ="badge-info bi-film"></i>Home</a>
                        </li>
                        <li class="navbar-nav flex-grow-1">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Welcome"> <i class ="badge-info bi-film"></i> TestIngWeirdShit</a>
                        </li>
                    </ul>

                    <form class="form-inline my-2 my-lg-0" asp-controller = "Home" asp-action = "Filter" style="padding-right: 20px;">
                        <input name = "searchString" type="text" class="form-control" placeholder="Search For a ____...." />
                        <button class="btn btn-outline-sucess my-2 my-sm-0" type="submit"> <i class= "bi bi-search"></i></button> 
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 1984 - RandomWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>