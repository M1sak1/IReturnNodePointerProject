@model AdminListViewModel
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "AdminAccountsView";
}
<style>
	table, th,tr,td{
		border-spacing: 50px;
		border:1px solid;
	}
</style>
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
</head>
<body>
	<table>
		<thead>
			<tr>
				<th>
					Accounts 
				</th>
			</tr>
		</thead>
		<thead>
			<th>
				Patrons
			</th>
			<th>
				Username/Email
			</th>
			<th>
				Name
			</th>
		<th>
			@if (ViewBag.View == "UnResolved")
			{
				<a href="@Url.Action("AdminAccountsView", "Admin", new {userType = "Patron"})">Add Patron</a>
			}
		</th>
		</thead>
		<tbody>	
			@foreach (var item in Model.Users)
			{
				<tr>
					<td>
						@item.UserID
					</td>
					<td>
						@item.Email
					</td>
					<td>
						@item.Name
					</td>
					<td>
						<button style="background-color:red" onclick="@("window.location.href='" + @Url.Action("AdminAccountsView", "Admin", new{ userType = "User", parameter2 = item.UserID}) + "'")">
							Delete
						</button>
					</td>
					<td>
						<button style="background-color:yellow" onclick="@("window.location.href='" + @Url.Action("AdminAccountsView", "Admin", new{ userType = "User", parameter2 = item.UserID}) + "'")">
							Edit
						</button>
					</td>
				</tr>
			}		
			<tr></tr>
		</tbody>
		<thead>
		<th>
			Employees
		</th>
		<th>
			Username/Email
		</th>
		<th>
			Name
		</th>
		<th>
			@if (ViewBag.View == "UnResolved")
			{
				<a href="@Url.Action("AdminAccountsView", "Admin", new {userType = "User"})">Add Patron</a>
			}
		</th>
		</thead>
		<tbody>
			@foreach (var item in Model.Employees)
			{
				<tr>
					<td>
							@item.UserID
					</td>
					<td>
						@item.email
					</td>
					<td>
							@item.Name
					</td>
					<td>
						<button style="background-color:red" onclick="@("window.location.href='" + @Url.Action("AdminAccountsView", "Admin", new{ userType = "User", parameter2 = item.UserID}) + "'")">
							Delete
						</button>
					</td>
					<td>
						<button style="background-color:yellow" onclick="@("window.location.href='" + @Url.Action("AdminAccountsView", "Admin", new{ userType = "User", parameter2 = item.UserID}) + "'")">
							Edit
						</button>
					</td>
				</tr>
			}
			<tr></tr>
		</tbody>
		<thead>
		<th>
			Admins
		</th>
		<th>
			Username/Email
		</th>
		<th>
			Name
		</th>
		<th>
			@if (ViewBag.View == "UnResolved")
			{
				<a href="@Url.Action("AdminAccountsView", "Admin", new {userType = "User"})">Add Patron</a>
			}
		</th>
		</thead>
		<tbody>
			@foreach (var item in Model.Admins)
			{
				<tr>
					<td>
						@item.UserID
					</td>
					<td>
						@item.email
					</td>
					<td>
						@item.Name
					</td>
					<td>
						<button style="background-color:red" onclick="@("window.location.href='" + @Url.Action("AdminAccountsView", "Admin", new{ userType = "User", parameter2 = item.UserID}) + "'")">
							Delete
						</button>
					</td>
					<td>
						<button style="background-color:yellow" onclick="@("window.location.href='" + @Url.Action("AdminAccountsView", "Admin", new{ userType = "User", parameter2 = item.UserID}) + "'")">
							Edit
						</button>
					</td>
				</tr>
			}
		</tbody>
	</table>
	@{

		if (ViewBag.View == "Add")
		{
			await Html.RenderPartialAsync("AddAccount",new IReturnNodePointerProject.Models.User());
		}
	}
</body>
</html>
